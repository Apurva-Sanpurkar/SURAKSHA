<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F8F9FA">

    <ImageButton
        android:id="@+id/btn_vault_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_revert"
        android:contentDescription="Back" />

    <TextView
        android:id="@+id/vault_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="SECURE VAULT"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1A73E8" />

    <ImageView
        android:id="@+id/decryptedImageView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/vault_title"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_menu_gallery" />

    <Button
        android:id="@+id/btn_select_file"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/decryptedImageView"
        android:layout_marginTop="20dp"
        android:text="SELECT ENCRYPTED PHOTO"
        android:backgroundTint="#1A73E8" />

    <Button
        android:id="@+id/btn_share_decrypted"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/btn_select_file"
        android:layout_marginTop="10dp"
        android:text="SHARE PHOTO"
        android:visibility="gone"
        android:backgroundTint="#34A853" />

</RelativeLayout>